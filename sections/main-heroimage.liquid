{{ 'main-heroimage.css' | asset_url | stylesheet_tag }}

{% if section.settings.hero_image_background %}
  {% assign hero_image_background_url = section.settings.hero_image_background | img_url: 'master' %}
{% else %}
  {% assign hero_image_background_url = 'Rectangle.png' | asset_img_url: 'master' %}
{% endif %}

{%- style -%}
  .main-heroimage-{{ section.id }}{
      color: {{ section.settings.hero_image_fontcolor }};
      background-image: url('{{ hero_image_background_url }}');
  }
  .main-heroimage-{{ section.id }} h1{
      color: {{ section.settings.hero_image_fontcolor }};
  }
  .main-heroimage-{{ section.id }} .button-1{
      color: {{ section.settings.hero_image_button_1_fontcolor }};
      background-color: {{ section.settings.hero_image_button_1_backgroundcolor }};
      border:1px solid {{ section.settings.hero_image_button_1_backgroundcolor }};
  }
  .main-heroimage-{{ section.id }} .button-1:hover{
      color: {{ section.settings.hero_image_button_1_fontcolor_hover }};
      background: transparent;
      border:1px solid {{ section.settings.hero_image_button_1_fontcolor_hover }};
  }
  .main-heroimage-{{ section.id }} .button-2{
      color: {{ section.settings.hero_image_button_2_fontcolor }};
      background-color: {{ section.settings.hero_image_button_2_backgroundcolor }};
      border:1px solid {{ section.settings.hero_image_button_2_backgroundcolor }};
  }
  .main-heroimage-{{ section.id }} .button-2:hover{
      color: {{ section.settings.hero_image_button_2_fontcolor_hover }};
      background: transparent;
      border:1px solid {{ section.settings.hero_image_button_2_fontcolor_hover }};
  }
  .main-heroimage-{{ section.id }} .button-3{
      color: {{ section.settings.hero_image_button_3_fontcolor }};
      background-color: {{ section.settings.hero_image_button_3_backgroundcolor }};
      border:1px solid {{ section.settings.hero_image_button_3_backgroundcolor }};
  }
  .main-heroimage-{{ section.id }} .button-3:hover{
      color: {{ section.settings.hero_image_button_3_fontcolor_hover }};
      background: transparent;
      border:1px solid {{ section.settings.hero_image_button_3_fontcolor_hover }};
  }
  .main-heroimage-{{ section.id }}{
    height: {{ section.settings.hero_image_height }}px;
    min-height: 300px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .main-heroimage-{{ section.id }} .button::before, .main-heroimage-{{ section.id }} .button::after{
    content: none;
  }
{%- endstyle -%}

<div class="main-heroimage-{{ section.id }} {{ section.settings.vertical_image_layout }} d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="main-heroimage-content text-center">
      <h1>{{ section.settings.hero_image_title }}</h1>
      {% if section.settings.hero_image_content != blank %}
        {{ section.settings.hero_image_content }}
      {% else %}
        <p>
          Se de mange nedsatte varer og køb løs hele ugen!<br>
          *Brug koden BLACK2024
        </p>
      {% endif %}
      <div class="hero-image-botton">
        {% if section.settings.hero_image_button_1_show == true %}
          <a href="{{ section.settings.hero_image_button_1_url | default: '#' }}" class="button button-1">
            {{- section.settings.hero_image_button_1_text -}}
          </a>
        {% endif %}
        {% if section.settings.hero_image_button_2_show == true %}
          <a href="{{ section.settings.hero_image_button_2_url | default: '#' }}" class="button button-2">
            {{- section.settings.hero_image_button_2_text -}}
          </a>
        {% endif %} 
        {% if section.settings.hero_image_button_3_show == true %}
          <a href="{{ section.settings.hero_image_button_3_url | default: '#' }}" class="button button-3">
            {{- section.settings.hero_image_button_3_text -}}
          </a>
        {% endif %}   
      </div>
    </div>
  </div>
</div>

