{{ 'footer.css' | asset_url | stylesheet_tag }}
<footer>
  <div class="container">
    <div class="footer-column">
      <div class="row">
        <div class="col-md-6 column-1">
          <div class="footer-column-title">
            {{ section.settings.footer_company_name }}
          </div>
          <div class="address">
            {% if section.settings.footer_company_address != blank %}
              {{ section.settings.footer_company_address }}
            {% else %}
              <p>Storegade 1, 2200 København N</p>
              <p>E: info@company.dk</p>
              <p>T: 65 65 65 65</p>
            {% endif %}
          </div>
          <div class="social-link">
            {% if section.settings.footer_social_facebook != blank %}
              <a href="{{ section.settings.footer_social_facebook }}" target="_blank"
                ><i class="fa-brands fa-facebook-f"></i
              ></a>
            {% endif %}
            {% if section.settings.footer_social_twitter != blank %}
              <a href="{{ section.settings.footer_social_twitter }}" target="_blank"
                ><i class="fa-brands fa-twitter"></i
              ></a>
            {% endif %}
            {% if section.settings.footer_social_linkedin != blank %}
              <a href="{{ section.settings.footer_social_linkedin }}" target="_blank"
                ><i class="fa-brands fa-linkedin-in"></i
              ></a>
            {% endif %}
            {% if section.settings.footer_social_instagram != blank %}
              <a href="{{ section.settings.footer_social_instagram }}" target="_blank"
                ><i class="fa-brands fa-instagram"></i
              ></a>
            {% endif %}
          </div>
        </div>
        <div class="col-md-2 column-2">
          <div class="footer-column-title">Shop</div>
          <ul class="footer-nav-link">
            {% for link in linklists[section.settings.footer_nav_shop].links %}
              <li>
                <a
                  href="{{ link.url }}"
                >
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="col-md-2 column-3">
          <div class="footer-column-title">Hjælp</div>
          <ul class="footer-nav-link">
            {% for link in linklists[section.settings.footer_nav_help].links %}
              <li>
                <a
                  href="{{ link.url }}"
                >
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="col-md-2 column-4">
          <div class="footer-column-title">Om Company ApS</div>
          <ul class="footer-nav-link">
            {% for link in linklists[section.settings.footer_nav_about].links %}
              <li>
                <a
                  href="{{ link.url }}"
                >
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-copyright py-4">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12 col-md-6 text-sm-center text-md-start">
          {{ section.settings.footer_copyright_text }}
        </div>
        <div class="col-12 col-md-6 text-sm-center text-md-end payment-logo">
          <img src="{{ 'Group_1064_2x.png' | asset_img_url }}">
          <img src="{{ 'Group_1065_2x.png' | asset_img_url }}">
          <img src="{{ 'Group_1066_2x.png' | asset_img_url }}">
          <img src="{{ 'Group_1067_2x.png' | asset_img_url }}">
          <img src="{{ 'Group_1068_2x.png' | asset_img_url }}">
          <img src="{{ 'Group_1069_2x.png' | asset_img_url }}">
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer-settings.name",
  "settings": [
    {
      "type": "text",
      "id": "footer_company_name",
      "label": "t:sections.footer-company.name",
      "default": "Company ApS"
    },
    {
      "type": "richtext",
      "id": "footer_company_address",
      "label": "t:sections.footer-company.address"
    },
    {
      "type": "url",
      "id": "footer_social_facebook",
      "label": "t:sections.footer-company.facebook"
    },
    {
      "type": "url",
      "id": "footer_social_twitter",
      "label": "t:sections.footer-company.twitter"
    },
    {
      "type": "url",
      "id": "footer_social_linkedin",
      "label": "t:sections.footer-company.linkedin"
    },
    {
      "type": "url",
      "id": "footer_social_instagram",
      "label": "t:sections.footer-company.instagram"
    },
    {
      "type": "link_list",
      "id": "footer_nav_shop",
      "label": "t:sections.footer-nav.shop"
    },
    {
      "type": "link_list",
      "id": "footer_nav_help",
      "label": "t:sections.footer-nav.help"
    },
    {
      "type": "link_list",
      "id": "footer_nav_about",
      "label": "t:sections.footer-nav.about"
    },
    {
      "type": "text",
      "id": "footer_copyright_text",
      "label": "t:sections.footer-copyright.text",
      "default": "Copyright © 2022 Radarsofthouse. All Rights Reserved."
    }
  ]
}
{% endschema %}
